<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Email</th>
      <th>Password</th>
      <th>Password confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.company_id %></td>
        <td><%= staff.email %></td>
        <td><%= staff.password %></td>
        <td><%= staff.password_confirmation %></td>
        <td><%= link_to 'Show', [:admin, staff] %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', [:admin, staff], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

