<% content_for :content do %>
  <div class="container-fluid" align="right">
    <%= link_to '新規追加', new_company_staff_path, class: 'btn btn-primary' %>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td><%= staff.id %></td>
          <td><%= staff.name %></td>
          <td><%= staff.email %></td>
          <td align="right">
            <%= link_to '編集', edit_company_staff_path(staff), {class: 'btn btn-default'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= render template: 'company/frame' %>
