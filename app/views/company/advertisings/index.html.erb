<% content_for :content do %>
  <div class="jumbotron">
    <h1>○○社 管理画面</h1>
    <img src="http://codeforfukui.github.io/meganehack/img/160316_banner.png">
    <p>キャラクター表示回数 : 100 / 全体広告インプレッション数 : 100</p>
  </div>
  <div class="container-fluid" align="right" style="margin-bottom: 20px;">
    <%= link_to '広告を新規追加', new_company_marker_advertising_path, class: 'btn btn-primary' %>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>広告バナー</th>
      <th></th>
    </tr>
    </thead>
    <tbody>

    <% @advertisings.each do |advertising| %>
      <tr>
        <td><%= advertising.id %></td>
        <td>
          <%= image_tag advertising.image.url %>
        </td>
        <td align='right'>
          <%= link_to '詳細・広告表示履歴', company_advertising_path(advertising), class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<%= render template: 'company/frame' %>