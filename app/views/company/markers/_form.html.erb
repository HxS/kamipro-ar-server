<% content_for :content do %>
  <%= form_for([:company, @marker]) do |f| %>
    <table class="table">
      <thead>
      <tr>
        <th>項目</th>
        <th>内容</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <th>名前</th>
        <td>
          <%= f.text_field :name, class: 'form-control' %>
        </td>
      </tr>
      <tr>
        <th>マーカー画像</th>
        <td>
          <%= f.file_field :image %>
        </td>
      </tr>
      </tbody>
    </table>
    <%= f.submit '追加', class: 'btn btn-default' %>
  <% end %>
<% end %>
<%= render template: 'company/frame' %>
