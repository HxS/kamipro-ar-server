<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Asset url</th>
      <th>Thumbnail url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.asset_url %></td>
        <td><%= character.thumbnail_url %></td>
        <td><%= link_to 'Show', [:admin, character] %></td>
        <td><%= link_to 'Edit', edit_admin_character_path(character) %></td>
        <td><%= link_to 'Destroy', [:admin, character], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

