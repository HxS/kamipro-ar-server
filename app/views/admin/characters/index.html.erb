<% content_for :content do %>
  <div class="container-fluid" align="right" style="margin-bottom: 20px;">
    <%= link_to '新規追加', new_admin_character_path, class:"btn btn-primary" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>キャラクター名</th>
        <th>サムネイル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.id %></td>
          <td><%= character.name %></td>
          <td><%= image_tag character.thumbnail.url(:thumbnail) %></td>
          <td align='right'>
            <%= link_to '編集', edit_admin_character_path(character), class:"btn btn-default" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
<%= render :template => 'admin/frame' %>
