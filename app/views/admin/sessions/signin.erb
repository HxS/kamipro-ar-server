<!DOCTYPE html>
<html>
  <head>
    <title>Kamiproar</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="login admin-login">
    <% if notice %>
      <div class="container">
        <div class="alert alert-success" role="alert"><%= notice %></div>
      </div>
    <% end %>
    <%= form_tag admin_signin_path, class: 'form-signin' do %>
      <h2 class="form-signin-heading">sagascope 管理者ログイン</h2>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="text" id="inputEmail" name="session[email]" class="form-control" placeholder="Email" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" name="session[password]" class="form-control" placeholder="Password" required>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <% end %>
  </body>
</html>
