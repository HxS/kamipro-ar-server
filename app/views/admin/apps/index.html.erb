<% content_for :content do %>
  <div class="container-fluid" align="right" style="margin-bottom: 20px;">
    <%= link_to '新規追加', new_admin_app_path, class:"btn btn-primary" %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>アプリ名</th>
        <th>補足</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @apps.each do |app| %>
        <tr>
          <td><%= app.id %></td>
          <td><%= app.name %></td>
          <td><%= app.memo %></td>
          <td align='right'>
            <%= link_to '編集', edit_admin_app_path(app), class:"btn btn-default" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
<%= render :template => 'admin/frame' %>
