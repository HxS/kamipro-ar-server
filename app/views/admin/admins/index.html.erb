<h1>Listing Admins</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Password confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= admin.password %></td>
        <td><%= admin.password_confirmation %></td>
        <td><%= link_to 'Show', [:admin, admin] %></td>
        <td><%= link_to 'Edit', edit_admin_admin_path(admin) %></td>
        <td><%= link_to 'Destroy', [:admin, admin], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

