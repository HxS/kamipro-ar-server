<% content_for :content do %>
  <div class="container-fluid" align="right" style="margin-bottom: 20px;">
		<%= link_to '新規追加', new_admin_admin_path, class:"btn btn-primary" %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>名前</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr data-href="<%= url_for [:admin, admin] %>">
          <td><%= admin.id %></td>
          <td><%= admin.name %></td>
          <td><%= admin.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= render :template => 'admin/frame' %>
