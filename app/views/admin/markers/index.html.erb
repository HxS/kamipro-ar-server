<% content_for :content do %>
  <div class="container-fluid" align="right" style="margin-bottom: 20px;">
    <%= link_to '新規追加', new_admin_marker_path, class:"btn btn-primary" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>名前</th>
        <th>企業名</th>
        <th>有効 / 無効</th>
        <th>画像</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @markers.each do |marker| %>
        <tr>
          <td><%= marker.id %></td>
          <td><%= marker.name %></td>
          <td><%= marker.company.name %></td>
          <td><%= if marker.enabled then "有効" else "無効" end %></td>
          <td><%= image_tag marker.image.url %></td>
          <td align='right'>
            <%= link_to '編集', edit_admin_marker_path(marker), class:"btn btn-default" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= render :template => 'admin/frame' %>
