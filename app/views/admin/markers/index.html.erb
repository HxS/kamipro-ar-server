<p id="notice"><%= notice %></p>

<h1>Listing Markers</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.company_id %></td>
        <td><%= marker.image_url %></td>
        <td><%= link_to 'Show', [:admin, marker] %></td>
        <td><%= link_to 'Edit', edit_admin_marker_path(marker) %></td>
        <td><%= link_to 'Destroy', [:admin, marker], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Marker', new_admin_marker_path %>
