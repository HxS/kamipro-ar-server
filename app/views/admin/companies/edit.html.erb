<% content_for :content do %>
  <% if @company.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for([:admin, @company]) do |f| %>
    <table class="table">
      <thead>
        <tr>
          <th>項目</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>ID</th>
          <td><%= @company.id %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= f.text_field :name, class:"form-control" %></td>
        </tr>
        <tr>
          <th>キャラクター名</th>
          <td><%= f.collection_select :character_id, @characters, :id,  :name, {}, class:"form-control" %></td>
        </tr>
        <tr>
          <th>有効/無効</th>
          <td>
            <label><%= f.radio_button :enabled, 1, :checked => @company.enabled %>有効</label>
            <label><%= f.radio_button :enabled, 0, :checked => !@company.enabled %>無効</label>
          </td>
        </tr>
        <tr>
          <th>アプリID</th>
          <td>
            <%= f.collection_check_boxes(:app_ids, @apps, :id, :name, checked:@company_app_ids) do |b|%>
              <div class="checkbox">
                <%= b.label { b.check_box + b.text } %>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= f.submit "更新", class:"btn btn-default" %>
    <%= link_to '削除', [:admin, @company], method: :delete, data: { confirm: '本当に削除しますか？' }, class:"btn btn-danger" %>
  <% end %>
<% end %>
<%= render :template => 'admin/frame' %>

