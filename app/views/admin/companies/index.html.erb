<% content_for :content do %>
	<div class="container-fluid" align="right" style="margin-bottom: 20px;">
		<%= link_to '新規追加', new_admin_company_path, class:"btn btn-primary" %>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>企業名</th>
				<th>有効/無効</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
	    <% @companies.each do |company| %>
				<tr>
					<td><%= company.id %></td>
					<td><%= company.name %></td>
					<td><%= if company.enabled then "有効" else "無効" end %></td>
					<td align='right'>
						<%= link_to '編集', edit_admin_company_path(company), class:"btn btn-default" %>
					</td>
				</tr>
	    <% end %>
		</tbody>
	</table>
<% end %>
<%= render :template => 'admin/frame' %>
<%
=begin
%>
<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Disabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.disabled %></td>
        <td><%= link_to 'Show', [:admin, company] %></td>
        <td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
        <td><%= link_to 'Destroy', [:admin, company], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_admin_company_path %>

