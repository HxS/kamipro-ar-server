<% content_for :content do %>
  <div class="container-fluid" align="right" style="margin-bottom: 20px;">
    <%= link_to '新規追加', new_admin_advertising_path, class:"btn btn-primary" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>リンク先</th>
        <th>広告バナー</th>
        <th>企業</th>
        <th>マーカー</th>
        <th>有効 / 無効</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @advertisings.each do |advertising| %>
        <tr>
          <td><%= advertising.id %></td>
          <td><%= advertising.link %></td>
          <td><%= image_tag advertising.image.url %></td>
          <td><%= advertising.marker.company.name %></td>
          <td><%= advertising.marker.name %></td>
          <td><%= if advertising.enabled then "有効" else "無効" end %></td>
          <td align='right'>
            <%= link_to '編集', edit_admin_advertising_path(advertising), class:"btn btn-default" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
<%= render :template => 'admin/frame' %>
